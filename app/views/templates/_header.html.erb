<header class="header">
  <div class="header__bar">
    <h1>
      <%# ルートパスへのリンクを設置 %>
      <span>転クエ掲示板</span>
    </h1>
    <% if user_signed_in? %>
      <ul class="header__bar__user_nav">
        <li class="user_name">
          <span><%= current_user.name %> さん</span>
        </li>
        <li class="header__bar__user_nav__btn">
          <%= link_to 'ログアウト', destroy_user_session_path, method: :delete %>
        </li>
        <li class="header__bar__user_nav__btn">
          <%#= link_to '投稿する', new_post_path %>
          投稿する
        </li>
      </ul>
    <% else %>
      <ul class="header__bar__user_nav">
        <li class="header__bar__user_nav__btn">
          <%= link_to 'ゲストログイン', users_guest_sign_in_path, method: :post %>
        </li>
        <li class="header__bar__user_nav__btn">
          <%= link_to 'ログイン', user_session_path %>
        </li>
        <li class="header__bar__user_nav__btn">
          <%= link_to '新規登録', new_user_registration_path %>
        </li>
      </ul>
    <% end %>
  </div>
</header>
